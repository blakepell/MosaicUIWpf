<UserControl
    x:Class="MosaicWpfDemo.Controls.Header"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="http://schemas.apexgate.net/wpf/mosaic-ui"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Image
                Width="48"
                Height="48"
                HorizontalAlignment="Right"
                Source="{Binding Path=ImageSource, RelativeSource={RelativeSource AncestorType=UserControl}}" />
            <TextBlock
                Margin="4,7,7,4"
                FontSize="22"
                SnapsToDevicePixels="True"
                Text="{Binding Path=Text, RelativeSource={RelativeSource AncestorType=UserControl}}"
                TextTrimming="CharacterEllipsis" />
        </StackPanel>
        <Rectangle
            Height="1"
            Margin="0,4,0,4"
            Stroke="{DynamicResource {x:Static mosaic:MosaicTheme.ControlBorderBrush}}" />

    </StackPanel>
</UserControl>
