<UserControl
    x:Class="LanChat.Views.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:common="clr-namespace:LanChat.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LanChat.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="http://schemas.apexgate.net/wpf/mosaic-ui"
    Padding="4"
    Loaded="ChatView_OnLoaded"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <common:AppSettingsLocator x:Key="AppSettings" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Row 0: fill remaining space and scroll when content overflows  -->
        <mosaic:ChatThread
            x:Name="ChatThread"
            Grid.Row="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Messages="{Binding Messages}"
            Visibility="Collapsed" />

        <!--  Row 1: pinned to bottom  -->
        <TextBox
            x:Name="CommandTextBox"
            Grid.Row="1"
            Margin="0,20,0,0"
            Padding="5"
            BorderBrush="#38383B"
            FontFamily="Consolas"
            FontSize="12"
            PreviewKeyDown="CommandTextBox_OnPreviewKeyDown"
            Visibility="Collapsed">
            <b:Interaction.Behaviors>
                <mosaic:TextBoxClearTextOnEscapeBehavior />
            </b:Interaction.Behaviors>
        </TextBox>

        <!--  Login overlay - centered horizontally and vertically  -->
        <Grid
            x:Name="LoginPanel"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <mosaic:ShadowPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border
                    Width="360"
                    Padding="16"
                    Background="{DynamicResource {x:Static mosaic:MosaicTheme.ControlBackgroundBrush}}"
                    CornerRadius="6"
                    Effect="{x:Null}">
                    <StackPanel>
                        <TextBlock
                            Margin="0,0,0,6"
                            HorizontalAlignment="Left"
                            FontSize="13"
                            Text="Server" />
                        <ComboBox
                            x:Name="ServerAddress"
                            IsEditable="True"
                            ItemsSource="{Binding ServerList}"
                            Margin="0,0,0,6"
                            Background="{DynamicResource {x:Static mosaic:MosaicTheme.ControlTextBackgroundBrush}}">
                        </ComboBox>
                        <TextBlock
                            Margin="0,0,0,6"
                            HorizontalAlignment="Left"
                            FontSize="13"
                            Text="Username" />
                        <TextBox
                            x:Name="UsernameTextBox"
                            MinWidth="300"
                            DataContext="{StaticResource AppSettings}"
                            FontSize="12"
                            Text="{Binding Username}" />
                        <Button
                            x:Name="LoginButton"
                            Margin="0,12,0,0"
                            Padding="8"
                            HorizontalAlignment="Stretch"
                            Click="LoginButton_Click"
                            Content="Login" />
                    </StackPanel>
                </Border>
            </mosaic:ShadowPanel>
        </Grid>
    </Grid>
</UserControl>
