<UserControl
    x:Class="LanChat.Views.SettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:common="clr-namespace:Mosaic.UI.Wpf.Common;assembly=Mosaic.UI.Wpf"
    xmlns:common1="clr-namespace:LanChat.Common"
    xmlns:controls="clr-namespace:MosaicWpfDemo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="http://schemas.apexgate.net/wpf/mosaic-ui"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding AppSettings}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <common:AppServiceLocator x:Key="AppSettings" Type="{x:Type common1:AppSettings}" />
        <mosaic:BrushToSolidColorBrushConverter x:Key="BrushConverter" />

        <Style x:Key="ContentBoxBorderStyle" TargetType="Border">
            <Setter Property="Padding" Value="7" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <Border Margin="19,9" Style="{StaticResource ContentBoxBorderStyle}">
            <!--  Info Main Body  -->
            <StackPanel>
                <controls:Header ImageSource="pack://application:,,/Assets/settings-96.png" Text="Settings" />

                <!--<mosaic:SettingsItem
                    Title="Enable hyperlinks in chat."
                    Margin="0,4,0,0"
                    Description="If hyperlinks are enabled in the chat messages."
                    IconSource="/Assets/link-48.png">
                    <mosaic:ToggleButton IsChecked="{Binding EnableHyperLinks, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" />
                </mosaic:SettingsItem>-->

                <mosaic:SettingsItem
                    Title="Start Server on Startup"
                    Margin="0,4,0,0"
                    Description="If an instance of a chat server host should be started when the app starts up."
                    IconSource="/Assets/play-blue-48.png">
                    <mosaic:ToggleButton IsChecked="{Binding StartServerOnStartup, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" />
                </mosaic:SettingsItem>

                <mosaic:SettingsItem
                    Title="Connect to localhost on Startup"
                    Margin="0,4,0,0"
                    Description="If the app should connect to 127.0.0.1 on startup (requires start server setting to be on)."
                    IconSource="/Assets/network-disconnected-48.png">
                    <mosaic:ToggleButton IsChecked="{Binding ConnectToLocalhostOnStartup, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" />
                </mosaic:SettingsItem>

                <mosaic:SettingsItem
                    Title="Server Name"
                    Margin="0,4,0,0"
                    Description="The name that your server should share to chat clients discovering servers."
                    IconSource="/Assets/tag-48.png">
                    <TextBox
                        Width="150"
                        VerticalAlignment="Center"
                        Text="{Binding ServerName, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" />
                </mosaic:SettingsItem>

                <mosaic:SettingsItem
                    Title="Chat Nickname"
                    Margin="0,4,0,0"
                    Description="The default nickname/username that you want to known by on the chat servers."
                    IconSource="/Assets/user-48.png">
                    <TextBox
                        Width="150"
                        VerticalAlignment="Center"
                        Text="{Binding Username, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True}" />
                </mosaic:SettingsItem>

                <mosaic:SettingsItem
                    Title="Chat Accent Color"
                    Margin="0,4,0,0"
                    Description="The accent color that your chat messages should display in."
                    IconSource="/Assets/color-swatch-48.png">
                    <mosaic:ColorPicker
                        Width="150"
                        HorizontalAlignment="Left"
                        CornerRadius="0"
                        DataContext="{StaticResource AppSettings}"
                        SelectedBrush="{Binding ChatAccentBrush, Mode=TwoWay, NotifyOnSourceUpdated=True, NotifyOnTargetUpdated=True, Converter={StaticResource BrushConverter}}" />
                </mosaic:SettingsItem>

            </StackPanel>
        </Border>
    </DockPanel>
</UserControl>
