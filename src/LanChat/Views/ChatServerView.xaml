<UserControl
    x:Class="LanChat.Views.ChatServerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MosaicWpfDemo.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LanChat.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="http://schemas.apexgate.net/wpf/mosaic-ui"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Margin="25,16,20,10" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <controls:Header
            Grid.Row="0"
            Grid.ColumnSpan="4"
            Margin="0,0,0,6"
            ImageSource="pack://application:,,/Assets/collage-48.png"
            Text="Server Options" />

        <StackPanel
            Grid.Row="1"
            Grid.Column="3"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <TextBlock
                Margin="0,0,8,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                FontSize="16">
                Server:
            </TextBlock>

            <mosaic:ToggleSwitch
                x:Name="ToggleServerIsOn"
                HorizontalAlignment="Right"
                Changed="ServerIsOn_OnChanged" />
        </StackPanel>

        <!--  ItemsSource="{Binding Commands.AsObservable}"  -->
        <ListView
            Name="ListViewFiles"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Margin="0,5,0,0"
            AllowDrop="True"
            AlternationCount="2"
            BorderBrush="{DynamicResource {x:Static mosaic:MosaicTheme.ControlBorderBrush}}"
            BorderThickness=".9,.9,.9,.9"
            FontSize="12"
            ItemsSource="{Binding ChatServer.Clients.AsObservable}"
            SelectionMode="Single"
            VirtualizingStackPanel.IsVirtualizing="False">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <!--  Type  -->
                    <GridViewColumn Width="100">
                        <GridViewColumnHeader>
                            Username
                        </GridViewColumnHeader>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Username}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!--  Last Activity  -->
                    <GridViewColumn Width="125" Header="Connected At">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ConnectedAt, Converter={x:Static mosaic:DateTimeDisplayConverter.Instance}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!--  Connected At  -->
                    <GridViewColumn Width="125" Header="Last Activity">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding LastActivity, Converter={x:Static mosaic:DateTimeDisplayConverter.Instance}}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!--  Messages Sent  -->
                    <GridViewColumn Width="100" Header="Messages Sent">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding MessagesSent}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
