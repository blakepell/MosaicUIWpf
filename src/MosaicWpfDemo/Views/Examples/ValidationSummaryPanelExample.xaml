<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.ValidationSummaryPanelExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MosaicWpfDemo.Views.Examples"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="Margin" Value="0,10,0,5" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
    </UserControl.Resources>
    
    <Grid x:Name="FormContainer" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <StackPanel Grid.Column="0">
            <!-- Validation Summary Panel -->
            <controls:ValidationSummaryPanel
                x:Name="ValidationSummary"
                Title="Please fix the following errors"
                AutoHideWhenValid="True"
                Target="{Binding ElementName=FormContainer}" />
            
            <!-- Sample Form -->
            <TextBlock Text="User Registration Form" FontSize="18" FontWeight="Bold" Margin="0,0,0,15" />
            
            <!-- First Name -->
            <TextBlock Text="First Name *" Style="{StaticResource LabelStyle}" />
            <TextBox
                x:Name="FirstNameTextBox"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
            
            <!-- Last Name -->
            <TextBlock Text="Last Name *" Style="{StaticResource LabelStyle}" />
            <TextBox
                x:Name="LastNameTextBox"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
            
            <!-- Email -->
            <TextBlock Text="Email *" Style="{StaticResource LabelStyle}" />
            <TextBox
                x:Name="EmailTextBox"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
            
            <!-- Age -->
            <TextBlock Text="Age (18-120)" Style="{StaticResource LabelStyle}" />
            <TextBox
                x:Name="AgeTextBox"
                Style="{StaticResource TextBoxStyle}"
                Text="{Binding Age, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}" />
            
            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button
                    x:Name="ValidateButton"
                    Padding="15,8"
                    Content="Validate Form"
                    Click="ValidateButton_Click" />
                <Button
                    x:Name="ClearButton"
                    Margin="10,0,0,0"
                    Padding="15,8"
                    Content="Clear Errors"
                    Click="ClearButton_Click" />
                <Button
                    x:Name="AddManualErrorButton"
                    Margin="10,0,0,0"
                    Padding="15,8"
                    Content="Add Manual Error"
                    Click="AddManualErrorButton_Click" />
            </StackPanel>
        </StackPanel>
        
        <!-- Description Panel -->
        <Border Grid.Column="1" Margin="20,0,0,0" Padding="15" Background="#F5F5F5" CornerRadius="5">
            <StackPanel>
                <TextBlock Text="About ValidationSummaryPanel" FontSize="16" FontWeight="Bold" Margin="0,0,0,10" />
                <TextBlock TextWrapping="Wrap" Margin="0,0,0,10">
                    The ValidationSummaryPanel control displays a summary of all validation errors 
                    from the form controls within its target container.
                </TextBlock>
                <TextBlock Text="Features:" FontWeight="SemiBold" Margin="0,10,0,5" />
                <TextBlock Text=" Automatically collects validation errors from child controls" Margin="10,0,0,2" />
                <TextBlock Text=" Supports IDataErrorInfo and INotifyDataErrorInfo" Margin="10,0,0,2" />
                <TextBlock Text=" Click on an error to focus the associated control" Margin="10,0,0,2" />
                <TextBlock Text=" Auto-hide when no errors are present" Margin="10,0,0,2" />
                <TextBlock Text=" Customizable header, icon, and colors" Margin="10,0,0,2" />
                <TextBlock Text=" Manual error addition support" Margin="10,0,0,2" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
