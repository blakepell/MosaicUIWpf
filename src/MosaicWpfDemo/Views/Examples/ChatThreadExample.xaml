<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.ChatThreadExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:chat="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:local="http://schemas.apexgate.net/wpf/mosaic-ui"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="Me"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="0,0,0,4"
            Orientation="Vertical">
            <TextBlock Margin="0,0,0,4" Text="Background Accent:" />
            <local:ColorPicker ColorChanged="ColorPicker_OnColorChanged" SelectedBrush="{Binding SelectedBrush, ElementName=Me, FallbackValue='#0A86F1'}" />
        </StackPanel>

        <!--  Row 0: fill remaining space and scroll when content overflows  -->
        <chat:ChatThread
            x:Name="ChatThread"
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            DataContext="{Binding Messages}" />

        <!--  Row 1: pinned to bottom  -->
        <TextBox
            x:Name="CommandTextBox"
            Grid.Row="2"
            Margin="0,20,0,0"
            Padding="5"
            BorderBrush="#38383B"
            FontFamily="Consolas"
            FontSize="12"
            PreviewKeyDown="CommandTextBox_OnPreviewKeyDown">
            <i:Interaction.Behaviors>
                <local:TextBoxClearTextOnEscapeBehavior />
            </i:Interaction.Behaviors>
        </TextBox>
    </Grid>
</UserControl>
