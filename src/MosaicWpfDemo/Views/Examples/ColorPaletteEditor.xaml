<UserControl x:Class="MosaicWpfDemo.Views.Examples.ColorPaletteEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MosaicWpfDemo.Views.Examples"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Content="Load Dictionary" Margin="5" Click="LoadButton_Click" />
            <Button Content="Save" Margin="5" Click="SaveButton_Click" />
        </StackPanel>

        <ListView Grid.Row="1" x:Name="ResourceListView" Margin="5" SelectionMode="Single" 
                  ItemsSource="{Binding ResourceItems, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="HARDCODED:" FontWeight="Bold" Margin="0,0,5,0" />
                        <TextBlock Text="{Binding Key}" FontWeight="Bold" Margin="0,0,10,0" />
                        <TextBlock Text="{Binding ResourceType}" FontStyle="Italic" Margin="0,0,10,0" />
                        <TextBlock Text="{Binding CurrentValue}" Margin="0,0,10,0" />
                        <Rectangle Width="20" Height="20" Stroke="Black" Fill="Red" />
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <TextBlock Grid.Row="2" x:Name="StatusTextBlock" Margin="10" />
    </Grid>
</UserControl>
