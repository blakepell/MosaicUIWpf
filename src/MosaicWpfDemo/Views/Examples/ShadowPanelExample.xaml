<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.ShadowPanelExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <mosaic:ShadowPanel
            Elevation="12"
            ShadowOpacity="0.4"
            ShadowThickness="15">
            <Button
                Width="100"
                Height="40"
                Content="Click Me" />
        </mosaic:ShadowPanel>

        <mosaic:ShadowPanel
            Margin="12,0,0,0"
            Elevation="12"
            ShadowOpacity="0.8"
            ShadowThickness="10">
            <Button
                Width="100"
                Height="40"
                Content="Click Me" />
        </mosaic:ShadowPanel>

        <mosaic:ShadowPanel
            Margin="12,0,0,0"
            Elevation="2"
            ShadowOpacity="0.8"
            ShadowThickness="1">
            <Button
                Width="100"
                Height="40"
                Content="Click Me" />
        </mosaic:ShadowPanel>

    </StackPanel>
</UserControl>
