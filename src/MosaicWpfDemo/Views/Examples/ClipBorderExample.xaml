<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.ClipBorderExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    xmlns:themes="http://schemas.apexgate.net/wpf/mosaic-ui"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <WrapPanel>
            <mosaic:ClipBorder
                Width="200"
                Height="100"
                Margin="0,0,10,0"
                HorizontalAlignment="Left"
                Background="CornflowerBlue"
                BorderBrush="{DynamicResource {x:Static themes:MosaicTheme.AccentBrush}}"
                BorderThickness="2"
                CornerRadius="10">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontWeight="Bold"
                    Foreground="White"
                    Text="Clipped Content" />
            </mosaic:ClipBorder>

            <mosaic:ClipBorder
                Width="100"
                Height="100"
                Margin="0,0,10,0"
                HorizontalAlignment="Left"
                CornerRadius="50">
                <Rectangle Fill="SkyBlue">
                    <Rectangle.OpacityMask>
                        <RadialGradientBrush>
                            <GradientStop Offset="0" Color="Black" />
                            <GradientStop Offset="1" Color="Transparent" />
                        </RadialGradientBrush>
                    </Rectangle.OpacityMask>
                </Rectangle>
            </mosaic:ClipBorder>

            <mosaic:ClipBorder
                Width="120"
                Height="80"
                Margin="0,0,10,0"
                HorizontalAlignment="Left"
                CornerRadius="15">
                <Rectangle>
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0" Color="#FF0063B1" />
                            <!--  Fluent Blue  -->
                            <GradientStop Offset="0.5" Color="#FF6DD6FF" />
                            <!--  Fluent Light Blue  -->
                            <GradientStop Offset="1" Color="#FF00B294" />
                            <!--  Fluent Teal  -->
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>
            </mosaic:ClipBorder>

        </WrapPanel>
    </ScrollViewer>
</UserControl>