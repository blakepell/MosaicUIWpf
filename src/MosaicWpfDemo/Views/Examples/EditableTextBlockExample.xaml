<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.EditableTextBlockExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <mosaic:EditableTextBlock FontSize="14" Text="this is sample text" />
        <mosaic:EditableTextBlock FontSize="14" Text="{Binding TestValue, Mode=TwoWay}" />
        <mosaic:EditableTextBlock
            FontSize="14"
            IsFilePath="True"
            Text="Margot and the Nuclear So and So's - Talking in Code.mp3"
            TextBoxPadding="4" />
    </StackPanel>
</UserControl>
