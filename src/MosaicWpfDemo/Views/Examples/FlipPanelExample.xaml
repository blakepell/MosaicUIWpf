<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.FlipPanelExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Controls  -->
        <StackPanel
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="125"
                Height="25"
                Margin="5,5,0,0"
                Click="FlipHorizontalButton_Click"
                Content="Flip Horizontal" />
            <Button
                Width="125"
                Height="25"
                Margin="5,5,0,0"
                Click="FlipVerticalButton_Click"
                Content="Flip Vertical" />
        </StackPanel>

        <!--  Examples  -->
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <!--  Horizontal Flip Example  -->
            <mosaic:FlipPanel
                x:Name="FlipPanelCoin"
                Width="128"
                Height="128"
                Margin="20"
                Cursor="Hand"
                Direction="Horizontal"
                MouseDown="FlipPanelCoin_OnMouseDown">
                <mosaic:FlipPanel.FrontContent>
                    <Image Source="pack://application:,,,/MosaicWpfDemo;component/Assets/penny-heads.png" />
                </mosaic:FlipPanel.FrontContent>

                <mosaic:FlipPanel.BackContent>
                    <Image Source="pack://application:,,,/MosaicWpfDemo;component/Assets/penny-tails.png" />
                </mosaic:FlipPanel.BackContent>
            </mosaic:FlipPanel>

        </StackPanel>
    </Grid>
</UserControl>