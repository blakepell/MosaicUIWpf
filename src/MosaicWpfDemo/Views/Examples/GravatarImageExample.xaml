<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.GravatarImageExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    xmlns:themes="clr-namespace:Mosaic.UI.Wpf.Themes;assembly=Mosaic.UI.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel
        Margin="5"
        VerticalAlignment="Center"
        Orientation="Vertical">
        <mosaic:ClipBorder
            Width="32"
            Height="32"
            Background="Black"
            CornerRadius="16">
            <mosaic:GravatarImage
                Width="28"
                Height="28"
                Email="blakepell@gmail.com"
                ToolTip="*casts Fire 3 violently*" />
        </mosaic:ClipBorder>
        <TextBlock
            Margin="0,4,0,0"
            Text="blakepell@gmail.com"
            TextAlignment="Center" />
    </StackPanel>

</UserControl>
