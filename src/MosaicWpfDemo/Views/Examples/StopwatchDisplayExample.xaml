<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.StopwatchDisplayExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <mosaic:StopwatchDisplay
            x:Name="StopwatchDisplay"
            FontSize="24"
            ShowMilliseconds="True" />

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="125"
                Height="25"
                Margin="0,5,0,0"
                Click="ButtonStart_OnClick"
                Content="Start" />

            <Button
                Width="125"
                Height="25"
                Margin="5,5,0,0"
                Click="ButtonStop_OnClick"
                Content="Stop" />

            <Button
                Width="125"
                Height="25"
                Margin="5,5,0,0"
                Click="ButtonReset_OnClick"
                Content="Reset" />

            <Button
                x:Name="ButtonHideMilliseconds"
                Width="125"
                Height="25"
                Margin="5,5,0,0"
                Click="ButtonHideMilliseconds_OnClick"
                Content="Hide Milliseconds" />

            <Button
                x:Name="ButtonShowMilliseconds"
                Width="125"
                Height="25"
                Visibility="Collapsed"
                Margin="5,5,0,0"
                Click="ButtonShowMilliseconds_OnClick"
                Content="Show Milliseconds" />

        </StackPanel>
    </StackPanel>
</UserControl>
