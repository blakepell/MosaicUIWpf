<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.StringListEditorExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="0,0,0,6" Text="Default Behavior" />
            <mosaic:StringListEditor
                Width="250"
                AllowDuplicates="False"
                Items="{Binding ControlList}" />
        </StackPanel>

        <StackPanel Margin="6,0,0,0" Orientation="Vertical">
            <TextBlock Margin="0,0,0,6" Text="Disallow strings under 3 characters" />
            <mosaic:StringListEditor
                x:Name="StringListEditorWithValidation"
                Width="250"
                AllowDuplicates="False"
                Items="{Binding ControlList2}" />
        </StackPanel>
    </StackPanel>
</UserControl>
