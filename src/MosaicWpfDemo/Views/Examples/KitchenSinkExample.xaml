<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.KitchenSinkExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    xmlns:themes="http://schemas.apexgate.net/wpf/mosaic-ui"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Native  -->
                <ResourceDictionary Source="/Mosaic.UI.Wpf;component/Themes/Native.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Menu inserted in grid row 0 -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="New">
                    <MenuItem Header="Text File"></MenuItem>
                    <MenuItem Header="Markdown File"></MenuItem>
                </MenuItem>
                <Separator />
                <MenuItem Header="E_xit" />
            </MenuItem>
            <MenuItem Header="_Action" />
        </Menu>

        <StackPanel
            Grid.Row="1"
            VerticalAlignment="Top"
            Orientation="Vertical">

            <TextBlock
                Margin="0,0,0,8"
                FontSize="18"
                FontWeight="SemiBold"
                Text="Kitchen Sink Example page" />
            <!--  Blank example surface: add controls here  -->
            <Border
                MinHeight="300"
                Padding="6"
                Background="{DynamicResource {x:Static themes:MosaicTheme.ControlBackgroundBrush}}"
                BorderBrush="{DynamicResource {x:Static themes:MosaicTheme.ControlBorderBrush}}"
                BorderThickness="1"
                CornerRadius="4">
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="0,0,0,0" Text="Username:" />
                        <TextBox
                            Width="250"
                            Margin="0,4,0,0"
                            HorizontalAlignment="Left" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="0,0,0,0" Text="Account Type:" />
                        <ComboBox>
                            <ComboBoxItem>User</ComboBoxItem>
                            <ComboBoxItem>Admin</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="0,0,0,0" Text="Enter username:" />
                        <ComboBox IsEditable="True">
                            <ComboBoxItem>bpell</ComboBoxItem>
                            <ComboBoxItem>isaac</ComboBoxItem>
                            <ComboBoxItem>lucy</ComboBoxItem>
                        </ComboBox>
                    </StackPanel>

                    <mosaic:ToggleButton Margin="0,6,0,0" />

                    <CheckBox Margin="4,2,0,0">
                        <TextBlock Text="Enabled" />
                    </CheckBox>

                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>