<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.KitchenSinkExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!--  Native  -->
                <ResourceDictionary Source="/Mosaic.UI.Wpf;component/Themes/Native/TextBox.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Margin="12">
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <TextBlock
                Margin="0,0,0,8"
                FontSize="18"
                FontWeight="SemiBold"
                Text="Kitchen Sink Example page" />
            <!--  Blank example surface: add controls here  -->
            <Border
                MinHeight="300"
                Background="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"
                BorderThickness="1"
                Padding="6"
                CornerRadius="4">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="First Name" Margin="0,0,0,0" />
                        <TextBox Margin="0,4,0,0" Width="250" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>