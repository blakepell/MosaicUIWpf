<UserControl
    x:Class="MosaicWpfDemo.Views.Examples.ToggleButtonExample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    xmlns:themes="http://schemas.apexgate.net/wpf/mosaic-ui"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel Margin="10" Orientation="Vertical">
        <TextBlock Margin="0,0,0,6" Text="Default Themed Accent Color" />

        <mosaic:SimpleStackPanel Orientation="Horizontal">
            <mosaic:ToggleButton IsChecked="False" />
            <mosaic:ToggleButton Margin="2,0,0,0" IsChecked="True" />
        </mosaic:SimpleStackPanel>

        <TextBlock Margin="0,6,0,6" Text="Custom Checked Color" />
        <mosaic:ToggleButton CheckedBackground="Green" IsChecked="True" />

        <TextBlock Margin="0,6,0,6" Text="Custom Color and Unchecked Color" />
        <mosaic:ToggleButton
            CheckedBackground="Green"
            IsChecked="False"
            UncheckedBackground="Red" />

    </StackPanel>
</UserControl>
