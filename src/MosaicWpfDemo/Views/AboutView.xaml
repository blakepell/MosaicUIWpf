<UserControl
    x:Class="MosaicWpfDemo.Views.AboutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MosaicWpfDemo.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Style x:Key="ContentBoxBorderStyle" TargetType="Border">
            <Setter Property="Padding" Value="7" />
            <Setter Property="VerticalAlignment" Value="Top" />
        </Style>
    </UserControl.Resources>

    <DockPanel>
        <Border Margin="19,9" Style="{StaticResource ContentBoxBorderStyle}">
            <!--  Info Main Body  -->
            <StackPanel>
                <local:Header ImageSource="pack://application:,,/Assets/collage-48.png" Text="Mosaic UI for WPF" />

                <Grid Margin="20,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="210" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="Written by:" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="Blake Pell" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="20,2,0,0"
                        FontSize="12"
                        Text="Version:" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="20,1,0,0"
                        FontSize="12"
                        Text="2025.08.30.1" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="20,2,0,0"
                        FontSize="12"
                        Text="Website:" />

                    <controls:Hyperlink
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        FontSize="12"
                        NavigateUri="https://www.apexgate.net"
                        Text="https://www.apexgate.net" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="20,-4,0,0"
                        FontSize="12"
                        Text="" />
                    <controls:Hyperlink
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="20,0,0,0"
                        FontSize="12"
                        NavigateUri="https://www.blakepell.com"
                        Text="https://www.blakepell.com" />
                </Grid>

                <TextBlock
                    Margin="9,10,0,0"
                    FontSize="18"
                    Text="Third Party Library Usage" />
                <Separator Height=".9" Margin="10,3,0,0" />

                <Grid Margin="20,0,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="210" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="Argus.Core" />
                    <TextBlock
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="https://github.com/blakepell/ArgusFramework" />

                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="CommunityToolkit.Mvvm" />
                    <TextBlock
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="https://github.com/CommunityToolkit" />

                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="0"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="Microsoft.Xaml.Behaviors.Wpf" />
                    <TextBlock
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="https://github.com/microsoft/XamlBehaviorsWpf" />

                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="AvalonEdit" />
                    <TextBlock
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="20,5,0,0"
                        FontSize="12"
                        Text="https://github.com/icsharpcode/AvalonEdit" />

                </Grid>
            </StackPanel>
        </Border>
    </DockPanel>

</UserControl>
