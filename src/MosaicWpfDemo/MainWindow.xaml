<Window
    x:Class="WpfDemo.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:example="clr-namespace:MosaicWpfDemo.Views.Examples"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls;assembly=Mosaic.UI.Wpf"
    xmlns:views="clr-namespace:MosaicWpfDemo.Views"
    Title="Mosaic UI WPF Demo"
    Width="1000"
    Height="600"
    AllowsTransparency="False"
    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
    Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
    Icon="/Assets/collage-48.png"
    Loaded="MainWindow_OnLoaded"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  Button Styles for Theming  -->
        <Style x:Key="TitleBarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="48" />
            <Setter Property="Height" Value="36" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightLightBrushKey}}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style
            x:Key="CloseButtonStyle"
            BasedOn="{StaticResource TitleBarButtonStyle}"
            TargetType="Button">
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E2342E" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#9A100C" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            CornerRadius="10"
            GlassFrameThickness="0"
            ResizeBorderThickness="5,5,5,5"
            UseAeroCaptionButtons="True" />
    </WindowChrome.WindowChrome>

    <Grid HorizontalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Custom Title Bar  -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="0"
            Padding="0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            Background="{DynamicResource {x:Static SystemColors.WindowBrush}}"
            MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <DockPanel Height="35" LastChildFill="True">
                <!--  System Buttons (Right)  -->
                <StackPanel
                    VerticalAlignment="Center"
                    DockPanel.Dock="Right"
                    Orientation="Horizontal">
                    <!--  Toggle Theme Button  -->
                    <Button
                        Width="48"
                        Click="ButtonToggleTheme_OnClick"
                        Style="{StaticResource TitleBarButtonStyle}"
                        ToolTip="Toggle Themes">
                        <Button.ContentTemplate>
                            <DataTemplate>
                                <Viewbox Width="16" Height="16">
                                    <Canvas Width="512" Height="512">
                                        <Path Data="M8 256c0 137 111 248 248 248s248-111 248-248S393 8 256 8 8 119 8 256zm248 184V72c101.7 0 184 82.3 184 184 0 101.7-82.3 184-184 184z" Fill="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}" />
                                    </Canvas>
                                </Viewbox>
                            </DataTemplate>
                        </Button.ContentTemplate>
                    </Button>

                    <Button
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="Minimize_Click"
                        Content="&#xE921;"
                        FontFamily="Segoe MDL2 Assets"
                        Style="{StaticResource TitleBarButtonStyle}"
                        ToolTip="Minimize" />
                    <Button
                        x:Name="MaxRestoreButton"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="MaximizeRestore_Click"
                        Content="&#xE922;"
                        FontFamily="Segoe MDL2 Assets"
                        Style="{StaticResource TitleBarButtonStyle}"
                        ToolTip="Maximize/Restore" />
                    <Button
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="Close_Click"
                        Content="&#xE8BB;"
                        FontFamily="Segoe MDL2 Assets"
                        Style="{StaticResource CloseButtonStyle}"
                        ToolTip="Close" />
                </StackPanel>
                <!--  App Icon  -->
                <Image
                    Width="16"
                    Height="16"
                    Margin="8,0,4,0"
                    VerticalAlignment="Center"
                    Source="/Assets/collage-48.png" />
                <!--  Custom Controls (Left)  -->
                <StackPanel
                    VerticalAlignment="Center"
                    DockPanel.Dock="Left"
                    Orientation="Horizontal">
                    <!--  Add your custom controls here  -->
                </StackPanel>
                <!--  Title (Background hack so mouse hit test works across the border)  -->
                <Border Height="35" Background="Transparent">
                    <TextBlock
                        Margin="4,0,8,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        FontSize="12"
                        FontWeight="Normal"
                        Foreground="{DynamicResource {x:Static SystemColors.WindowTextBrushKey}}"
                        Text="Mosaic UI WPF Demo" />
                </Border>
            </DockPanel>
        </Border>

        <mosaic:SideMenu
            x:Name="TestSideMenu"
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            ContentPresenter="{Binding ElementName=MainContent}">
            <mosaic:SideMenu.MenuItems>
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:AboutView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="pack://application:,,,/Assets/collage-48.png"
                    Text="About" />

                <!--  AsteriskTextBlock  -->
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:ShellView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="/Assets/password-48.png"
                    Text="AsteriskTextBlock">
                    <mosaic:SideMenuItem.ParameterCollection>
                        <mosaic:SideMenuParameterCollection>
                            <mosaic:SideMenuParameter Key="Title" Value="AsteriskTextBlock" />
                            <mosaic:SideMenuParameter Key="XamlFile" Value="MosaicWpfDemo.LinkedSources.AsteriskTextBlockExample.xaml" />
                            <mosaic:SideMenuParameter Key="CodeFile" Value="MosaicWpfDemo.LinkedSources.AsteriskTextBlockExample.xaml.cs" />
                            <mosaic:SideMenuParameter Key="DocumentationType" Value="{x:Type mosaic:AsteriskTextBlock}" />
                            <mosaic:SideMenuParameter Key="ExampleType" Value="{x:Type example:AsteriskTextBlockExample}" />
                            <mosaic:SideMenuParameter Key="ImageSource" Value="/Assets/password-48.png" />
                        </mosaic:SideMenuParameterCollection>
                    </mosaic:SideMenuItem.ParameterCollection>
                </mosaic:SideMenuItem>

                <!--  Avatar  -->
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:ShellView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="/Assets/avatar-48.png"
                    Text="Avatar">
                    <mosaic:SideMenuItem.ParameterCollection>
                        <mosaic:SideMenuParameterCollection>
                            <mosaic:SideMenuParameter Key="Title" Value="Avatar" />
                            <mosaic:SideMenuParameter Key="XamlFile" Value="MosaicWpfDemo.LinkedSources.AvatarExample.xaml" />
                            <mosaic:SideMenuParameter Key="CodeFile" Value="MosaicWpfDemo.LinkedSources.AvatarExample.xaml.cs" />
                            <mosaic:SideMenuParameter Key="DocumentationType" Value="{x:Type mosaic:Avatar}" />
                            <mosaic:SideMenuParameter Key="ExampleType" Value="{x:Type example:AvatarExample}" />
                            <mosaic:SideMenuParameter Key="ImageSource" Value="/Assets/avatar-48.png" />
                        </mosaic:SideMenuParameterCollection>
                    </mosaic:SideMenuItem.ParameterCollection>
                </mosaic:SideMenuItem>

                <!--  Badge  -->
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:ShellView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="/Assets/badge-48.png"
                    Text="Badge">
                    <mosaic:SideMenuItem.ParameterCollection>
                        <mosaic:SideMenuParameterCollection>
                            <mosaic:SideMenuParameter Key="Title" Value="Badge" />
                            <mosaic:SideMenuParameter Key="XamlFile" Value="MosaicWpfDemo.LinkedSources.BadgeExample.xaml" />
                            <mosaic:SideMenuParameter Key="CodeFile" Value="MosaicWpfDemo.LinkedSources.BadgeExample.xaml.cs" />
                            <mosaic:SideMenuParameter Key="DocumentationType" Value="{x:Type mosaic:Badge}" />
                            <mosaic:SideMenuParameter Key="ExampleType" Value="{x:Type example:BadgeExample}" />
                            <mosaic:SideMenuParameter Key="ImageSource" Value="/Assets/badge-48.png" />
                        </mosaic:SideMenuParameterCollection>
                    </mosaic:SideMenuItem.ParameterCollection>
                </mosaic:SideMenuItem>

                <!--  ClipBorder  -->
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:ShellView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="/Assets/circle-48.png"
                    Text="ClipBorder">
                    <mosaic:SideMenuItem.ParameterCollection>
                        <mosaic:SideMenuParameterCollection>
                            <mosaic:SideMenuParameter Key="Title" Value="ClipBorder" />
                            <mosaic:SideMenuParameter Key="XamlFile" Value="MosaicWpfDemo.LinkedSources.ClipBorderExample.xaml" />
                            <mosaic:SideMenuParameter Key="CodeFile" Value="MosaicWpfDemo.LinkedSources.ClipBorderExample.xaml.cs" />
                            <mosaic:SideMenuParameter Key="DocumentationType" Value="{x:Type mosaic:ClipBorder}" />
                            <mosaic:SideMenuParameter Key="ExampleType" Value="{x:Type example:ClipBorderExample}" />
                            <mosaic:SideMenuParameter Key="ImageSource" Value="/Assets/circle-48.png" />
                        </mosaic:SideMenuParameterCollection>
                    </mosaic:SideMenuItem.ParameterCollection>
                </mosaic:SideMenuItem>

                <!--  GravatarImage  -->
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:ShellView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="/Assets/gravatar-48.png"
                    Text="GravatarImage">
                    <mosaic:SideMenuItem.ParameterCollection>
                        <mosaic:SideMenuParameterCollection>
                            <mosaic:SideMenuParameter Key="Title" Value="GravatarImage" />
                            <mosaic:SideMenuParameter Key="XamlFile" Value="MosaicWpfDemo.LinkedSources.GravatarImageExample.xaml" />
                            <mosaic:SideMenuParameter Key="CodeFile" Value="MosaicWpfDemo.LinkedSources.GravatarImageExample.xaml.cs" />
                            <mosaic:SideMenuParameter Key="DocumentationType" Value="{x:Type mosaic:GravatarImage}" />
                            <mosaic:SideMenuParameter Key="ExampleType" Value="{x:Type example:GravatarImageExample}" />
                            <mosaic:SideMenuParameter Key="ImageSource" Value="/Assets/gravatar-48.png" />
                        </mosaic:SideMenuParameterCollection>
                    </mosaic:SideMenuItem.ParameterCollection>
                </mosaic:SideMenuItem>

                <!--  Hyperlink  -->
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:ShellView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="/Assets/link-48.png"
                    Text="Hyperlink">
                    <mosaic:SideMenuItem.ParameterCollection>
                        <mosaic:SideMenuParameterCollection>
                            <mosaic:SideMenuParameter Key="Title" Value="Hyperlink" />
                            <mosaic:SideMenuParameter Key="XamlFile" Value="MosaicWpfDemo.LinkedSources.HyperlinkExample.xaml" />
                            <mosaic:SideMenuParameter Key="CodeFile" Value="MosaicWpfDemo.LinkedSources.HyperlinkExample.xaml.cs" />
                            <mosaic:SideMenuParameter Key="DocumentationType" Value="{x:Type mosaic:Hyperlink}" />
                            <mosaic:SideMenuParameter Key="ExampleType" Value="{x:Type example:HyperlinkExample}" />
                            <mosaic:SideMenuParameter Key="ImageSource" Value="/Assets/link-48.png" />
                        </mosaic:SideMenuParameterCollection>
                    </mosaic:SideMenuItem.ParameterCollection>
                </mosaic:SideMenuItem>

                <!--  Labeled Separator  -->
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:ShellView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="/Assets/labeled-separator-96.png"
                    Text="Labeled Separator">
                    <mosaic:SideMenuItem.ParameterCollection>
                        <mosaic:SideMenuParameterCollection>
                            <mosaic:SideMenuParameter Key="Title" Value="Labeled Separator" />
                            <mosaic:SideMenuParameter Key="XamlFile" Value="MosaicWpfDemo.LinkedSources.LabeledSeparatorExample.xaml" />
                            <mosaic:SideMenuParameter Key="CodeFile" Value="MosaicWpfDemo.LinkedSources.LabeledSeparatorExample.xaml.cs" />
                            <mosaic:SideMenuParameter Key="DocumentationType" Value="{x:Type mosaic:LabeledSeparator}" />
                            <mosaic:SideMenuParameter Key="ExampleType" Value="{x:Type example:LabeledSeparatorExample}" />
                            <mosaic:SideMenuParameter Key="ImageSource" Value="/Assets/labeled-separator-96.png" />
                        </mosaic:SideMenuParameterCollection>
                    </mosaic:SideMenuItem.ParameterCollection>
                </mosaic:SideMenuItem>

                <!--  Tab Control  -->
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:ShellView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="/Assets/tab-control-48.png"
                    Text="Tab Control">
                    <mosaic:SideMenuItem.ParameterCollection>
                        <mosaic:SideMenuParameterCollection>
                            <mosaic:SideMenuParameter Key="Title" Value="Tab Control" />
                            <mosaic:SideMenuParameter Key="XamlFile" Value="MosaicWpfDemo.LinkedSources.TabControlExample.xaml" />
                            <mosaic:SideMenuParameter Key="CodeFile" Value="MosaicWpfDemo.LinkedSources.TabControlExample.xaml.cs" />
                            <mosaic:SideMenuParameter Key="DocumentationType" Value="{x:Type mosaic:TabControl}" />
                            <mosaic:SideMenuParameter Key="ExampleType" Value="{x:Type example:TabControlExample}" />
                            <mosaic:SideMenuParameter Key="ImageSource" Value="/Assets/tab-control-48.png" />
                        </mosaic:SideMenuParameterCollection>
                    </mosaic:SideMenuItem.ParameterCollection>
                </mosaic:SideMenuItem>

                <!--  SearchBox Control  -->
                <mosaic:SideMenuItem
                    ContentType="{x:Type views:ShellView}"
                    ContentTypeIsSingleton="True"
                    ImageSource="/Assets/search-48.png"
                    Text="Search Box">
                    <mosaic:SideMenuItem.ParameterCollection>
                        <mosaic:SideMenuParameterCollection>
                            <mosaic:SideMenuParameter Key="Title" Value="Search Box" />
                            <mosaic:SideMenuParameter Key="XamlFile" Value="MosaicWpfDemo.LinkedSources.SearchBoxExample.xaml" />
                            <mosaic:SideMenuParameter Key="CodeFile" Value="MosaicWpfDemo.LinkedSources.SearchBoxExample.xaml.cs" />
                            <mosaic:SideMenuParameter Key="DocumentationType" Value="{x:Type mosaic:SearchBox}" />
                            <mosaic:SideMenuParameter Key="ExampleType" Value="{x:Type example:SearchBoxExample}" />
                            <mosaic:SideMenuParameter Key="ImageSource" Value="/Assets/search-48.png" />
                        </mosaic:SideMenuParameterCollection>
                    </mosaic:SideMenuItem.ParameterCollection>
                </mosaic:SideMenuItem>

            </mosaic:SideMenu.MenuItems>
        </mosaic:SideMenu>

        <ContentPresenter
            x:Name="MainContent"
            Grid.Row="1"
            Grid.Column="1" />
    </Grid>
</Window>