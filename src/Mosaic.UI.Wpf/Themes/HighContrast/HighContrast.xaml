<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:themes="clr-namespace:Mosaic.UI.Wpf.Themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Mosaic.UI.Wpf;component/Themes/Dark/Dark.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Core semantic colors  -->
    <Color x:Key="{x:Static themes:MosaicTheme.AccentColor}">#FFFFFF00</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.AccentBorderColor}">#FFFFFF00</Color>

    <Color x:Key="{x:Static themes:MosaicTheme.SelectionBackgroundColor}">#FFFFFF00</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SelectionForegroundColor}">#FF000000</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.InactiveSelectionBackgroundColor}">#FF3C3C3C</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.InactiveSelectionBorderColor}">#FFCCCCCC</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.PlaceholderTextColor}">#FFE0E0E0</Color>

    <!--  Surface / text  -->
    <Color x:Key="{x:Static themes:MosaicTheme.WindowBackgroundColor}">#FF000000</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.WindowForegroundColor}">#FFFFFFFF</Color>

    <Color x:Key="{x:Static themes:MosaicTheme.ControlBackgroundColor}">#FF000000</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBackgroundLightColor}">#FF141414</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlForegroundColor}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBorderColor}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlSelectedBorderColor}">#FFFFFF00</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlHoverBackgroundColor}">#FF1E1E1E</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlHoverBorderColor}">#FFFFFF00</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextBackgroundColor}">#FF000000</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextForegroundColor}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextSecondaryForegroundColor}">#FFE0E0E0</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlPressedBackgroundColor}">#FFFFFF00</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlPressedBorderColor}">#FFFFFF00</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlDisabledBackgroundColor}">#FF0F0F0F</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlDisabledForegroundColor}">#FFB0B0B0</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlDisabledBorderColor}">#FF6B6B6B</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlSeparatorColor}">#FFFFFFFF</Color>

    <!--  Hyperlink / tabs / status  -->
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkColor}">#FF80FFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkHoverColor}">#FFFFFF00</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkVisitedColor}">#FFFF80FF</Color>

    <Color x:Key="{x:Static themes:MosaicTheme.TabItemSelectedBackgroundColor}">#FF000000</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBackgroundColor}">#FF111111</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBorderColor}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemForegroundColor}">#FFFFFFFF</Color>

    <Color x:Key="{x:Static themes:MosaicTheme.InfoColor}">#FF80FFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SuccessColor}">#FF7CFC00</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.WarningColor}">#FFFFFF00</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ErrorColor}">#FFFF6B6B</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarSelectedBackgroundColor}">#FF1A1A1A</Color>
    <Thickness x:Key="{x:Static themes:MosaicTheme.ButtonBorderThickness}">0.8</Thickness>

    <!--  Native control resource overrides  -->
    <Color x:Key="Button.Static.BackgroundColor">#FF000000</Color>
    <Color x:Key="Button.Static.BorderColor">#FFFFFFFF</Color>
    <Color x:Key="Button.MouseOver.BackgroundColor">#FF1E1E1E</Color>
    <Color x:Key="Button.MouseOver.BorderColor">#FFFFFF00</Color>
    <Color x:Key="Button.Pressed.BackgroundColor">#FFFFFF00</Color>
    <Color x:Key="Button.Pressed.BorderColor">#FFFFFF00</Color>
    <Color x:Key="Button.Disabled.BackgroundColor">#FF0F0F0F</Color>
    <Color x:Key="Button.Disabled.BorderColor">#FF5C5C5C</Color>
    <Color x:Key="Button.Disabled.ForegroundColor">#FFB0B0B0</Color>

    <SolidColorBrush x:Key="ScrollBar.Static.Background" Color="#FF000000" />
    <SolidColorBrush x:Key="ScrollBar.Static.Border" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ScrollBar.Static.Glyph" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ScrollBar.Static.Thumb" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Background" Color="#FF1E1E1E" />
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Border" Color="#FFFFFF00" />
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Glyph" Color="#FFFFFF00" />
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Thumb" Color="#FFFFFF00" />
</ResourceDictionary>
