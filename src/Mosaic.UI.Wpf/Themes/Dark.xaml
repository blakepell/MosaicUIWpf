<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:themes="clr-namespace:Mosaic.UI.Wpf.Themes">

    <!--  MOSAIC CUSTOM COLORS  -->
    <Color x:Key="{x:Static themes:MosaicTheme.AccentColorKey}">#FF0a9feb</Color>

    <!--  Control colors  -->
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextForegroundColorKey}">#FFFFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextBackgroundColorKey}">#1C1C1C</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBackgroundColorKey}">#383838</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBorderColorKey}">#575A61</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBorderHoverColorKey}">#8A8D91</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBorderFocusColorKey}">#FF6CB8F7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextSelectionColorKey}">#FF6CB8F7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextInactiveSelectionColorKey}">#306A9F</Color>

    <!--  Hyperlink colors  -->
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkColorKey}">#FF0A86F1</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkHoverColorKey}">#FF6CB8F7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkVisitedColorKey}">#7D77B7</Color>

    <!--  Sidebar colors  -->
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarSelectedBackgroundColorKey}">#FF03467A</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarSelectedAccentColorKey}">#FF6CB8F7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarForegroundColorKey}">#FFFFFFFF</Color>

    <!--  Tab & TabItem colors  -->
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemSelectedBackgroundColorKey}">#FF171717</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBackgroundColorKey}">#FF202020</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBorderColorKey}">#FF38383B</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemForegroundColorKey}">White</Color>

    <!--  CheckBox colors  -->
    <SolidColorBrush
        x:Key="CheckBox.Border.Normal"
        po:Freeze="True"
        Color="#FF575A61" />
    <SolidColorBrush
        x:Key="CheckBox.Border.Hot"
        po:Freeze="True"
        Color="#FF6CB8F7" />
    <SolidColorBrush
        x:Key="CheckBox.Border.Pressed"
        po:Freeze="True"
        Color="#FF0A9FEB" />
    <SolidColorBrush
        x:Key="CheckBox.Border.Disabled"
        po:Freeze="True"
        Color="#FF3A3A3D" />
    <SolidColorBrush
        x:Key="CheckBox.Background.Normal"
        po:Freeze="True"
        Color="#FF1C1C1C" />
    <SolidColorBrush
        x:Key="CheckBox.Background.Hot"
        po:Freeze="True"
        Color="#FF1E1E1E" />
    <SolidColorBrush
        x:Key="CheckBox.Background.Pressed"
        po:Freeze="True"
        Color="#FF171717" />
    <SolidColorBrush
        x:Key="CheckBox.Background.Disabled"
        po:Freeze="True"
        Color="#FF2B2B2B" />
    <SolidColorBrush
        x:Key="CheckBox.Mark.Normal"
        po:Freeze="True"
        Color="#FFFFFFFF" />
    <SolidColorBrush
        x:Key="CheckBox.Mark.Hot"
        po:Freeze="True"
        Color="#FF6CB8F7" />
    <SolidColorBrush
        x:Key="CheckBox.Mark.Pressed"
        po:Freeze="True"
        Color="#FF0A9FEB" />
    <SolidColorBrush
        x:Key="CheckBox.Mark.Disabled"
        po:Freeze="True"
        Color="#FF6B6B6B" />

    <!--  ComboBox  -->
    <SolidColorBrush x:Key="ComboBox.Static.Background" Color="{DynamicResource {x:Static themes:MosaicTheme.ControlBackgroundColorKey}}" />
    <SolidColorBrush x:Key="ComboBox.Static.Border" Color="{DynamicResource {x:Static themes:MosaicTheme.ControlBorderColorKey}}" />
    <SolidColorBrush x:Key="ComboBox.MouseOver.Background" Color="#1F26A0DA" />
    <SolidColorBrush x:Key="ComboBox.MouseOver.Border" Color="#a826A0Da" />
    <SolidColorBrush x:Key="ComboBox.Pressed.Background" Color="#FFC4E5F6" />
    <SolidColorBrush x:Key="ComboBox.Pressed.Border" Color="#FF2C628B" />
    <SolidColorBrush x:Key="ComboBox.Disabled.Background" Color="#FFF4F4F4" />
    <SolidColorBrush x:Key="ComboBox.Disabled.Border" Color="#FFADB2B5" />

    <!--  ListView / GridView brushes (dark theme)  -->
    <SolidColorBrush x:Key="ListBorder" Color="{DynamicResource {x:Static themes:MosaicTheme.ControlBorderColorKey}}" />
    <SolidColorBrush x:Key="Item.Static.Background" Color="Transparent" />
    <SolidColorBrush x:Key="Item.Static.Border" Color="Transparent" />
    <SolidColorBrush x:Key="Item.MouseOver.Background" Color="#2D2D30" />
    <SolidColorBrush x:Key="Item.MouseOver.Border" Color="#FF0078D7" />
    <SolidColorBrush x:Key="Item.SelectedActive.Background" Color="#FF0078D7" />
    <SolidColorBrush x:Key="Item.SelectedActive.Border" Color="#FF106EBE" />
    <SolidColorBrush x:Key="Item.SelectedInactive.Background" Color="#3F3F46" />
    <SolidColorBrush x:Key="Item.SelectedInactive.Border" Color="#6F6F73" />

    <SolidColorBrush x:Key="GridViewColumnHeader.Background" Color="#2D2D30" />
    <SolidColorBrush x:Key="GridViewColumnHeader.BorderBrush" Color="#3F3F46" />
    <SolidColorBrush x:Key="GridViewColumnHeader.MouseOver.Border" Color="#FF0078D7" />
    <SolidColorBrush x:Key="GridViewColumnHeader.MouseOver.Background" Color="#37373D" />
    <SolidColorBrush x:Key="GridViewColumnHeader.Pressed.Border" Color="#FF106EBE" />
    <SolidColorBrush x:Key="GridViewColumnHeader.Pressed.Background" Color="#3F3F46" />
    <SolidColorBrush x:Key="GridViewColumnHeader.FloatingOverlayBrush" Color="#FF000000" />
    <SolidColorBrush x:Key="GridViewColumnHeaderGripper.LineBrush" Color="#6F6F73" />
    <SolidColorBrush x:Key="ScrollBar.SeparatorBrush" Color="#2D2D30" />

</ResourceDictionary>