<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:themes="clr-namespace:Mosaic.UI.Wpf.Themes">
    <ResourceDictionary.MergedDictionaries>
        <!--  Mosaic controls  -->
        <ResourceDictionary Source="pack://application:,,,/Mosaic.UI.Wpf;component/Themes/Dark/SystemColors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  MOSAIC CUSTOM COLORS  -->
    <Color x:Key="{x:Static themes:MosaicTheme.AccentColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.AccentBorderColor}">#FF005A9E</Color>

    <!--  Selection  -->
    <Color x:Key="{x:Static themes:MosaicTheme.SelectionBackgroundColor}">#FF3399FF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SelectionForegroundColor}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.InactiveSelectionBackgroundColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.InactiveSelectionBorderColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.PlaceholderTextColor}">#FFAAAAAA</Color>

    <!--  Status / Semantics  -->
    <Color x:Key="{x:Static themes:MosaicTheme.InfoColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SuccessColor}">#FF388A34</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.WarningColor}">#FFD18700</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ErrorColor}">#FFF44747</Color>

    <!--  Window  -->
    <Color x:Key="{x:Static themes:MosaicTheme.WindowBackgroundColor}">#232325</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.WindowForegroundColor}">#FFF1F1F1</Color>

    <!--  Control  -->
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBackgroundColor}">#FF2D2D30</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlForegroundColor}">#FFF1F1F1</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBorderColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlSelectedBorderColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlHoverBackgroundColor}">#FF3E3E42</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlHoverBorderColor}">#FF2196F3</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextBackgroundColor}">#232325</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextForegroundColor}">#FFF1F1F1</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlPressedBackgroundColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlPressedBorderColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlDisabledBackgroundColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlDisabledForegroundColor}">#FF6A6A6A</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlDisabledBorderColor}">#FF4F4F53</Color>

    <!--  Hyperlink  -->
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkColor}">#FF569CD6</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkHoverColor}">#FF2A8DD4</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkVisitedColor}">#FFC8C8C8</Color>

    <!--  Tab & TabItem  -->
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemSelectedBackgroundColor}">#FF1E1E1E</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBackgroundColor}">#FF2D2D30</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBorderColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemForegroundColor}">#FFF1F1F1</Color>

    <!--  Sidebar  -->
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarSelectedBackgroundColor}">#FF333337</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarSelectedAccentColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarForegroundColor}">#FFF1F1F1</Color>

    <!--  Button (colors only; brushes are provided by Brushes.xaml)  -->
    <Color x:Key="Button.Static.BackgroundColor">#FF2D2D30</Color>
    <Color x:Key="Button.Static.BorderColor">#FF3A3A3C</Color>
    <Color x:Key="Button.MouseOver.BackgroundColor">#FF3A96DD</Color>
    <Color x:Key="Button.MouseOver.BorderColor">#FF569DE5</Color>
    <Color x:Key="Button.Pressed.BackgroundColor">#FF094771</Color>
    <Color x:Key="Button.Pressed.BorderColor">#FF003366</Color>
    <Color x:Key="Button.Disabled.BackgroundColor">#FF3E3E42</Color>
    <Color x:Key="Button.Disabled.BorderColor">#FF232325</Color>
    <Color x:Key="Button.Disabled.ForegroundColor">#FF77777B</Color>

</ResourceDictionary>