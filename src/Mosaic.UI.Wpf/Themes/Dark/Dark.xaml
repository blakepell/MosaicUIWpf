<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:themes="clr-namespace:Mosaic.UI.Wpf.Themes">
    <ResourceDictionary.MergedDictionaries>
        <!--  Mosaic controls  -->
        <ResourceDictionary Source="pack://application:,,,/Mosaic.UI.Wpf;component/Themes/Dark/SystemColors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  MOSAIC CUSTOM COLORS  -->
    <Color x:Key="{x:Static themes:MosaicTheme.AccentColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.AccentBorderColor}">#FF005A9E</Color>

    <!--  Selection  -->
    <Color x:Key="{x:Static themes:MosaicTheme.SelectionBackgroundColor}">#FF3399FF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SelectionForegroundColor}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.InactiveSelectionBackgroundColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.InactiveSelectionBorderColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.PlaceholderTextColor}">#FFAAAAAA</Color>

    <!--  Status / Semantics  -->
    <Color x:Key="{x:Static themes:MosaicTheme.InfoColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SuccessColor}">#FF388A34</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.WarningColor}">#FFD18700</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ErrorColor}">#FFF44747</Color>

    <!--  Window  -->
    <Color x:Key="{x:Static themes:MosaicTheme.WindowBackgroundColor}">#232325</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.WindowForegroundColor}">#FFF1F1F1</Color>

    <!--  Control  -->
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBackgroundColor}">#FF2D2D30</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlForegroundColor}">#FFF1F1F1</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBorderColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlSelectedBorderColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlHoverBackgroundColor}">#FF3E3E42</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlHoverBorderColor}">#FF2196F3</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextBackgroundColor}">#232325</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextForegroundColor}">#FFF1F1F1</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlPressedBackgroundColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlPressedBorderColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlDisabledBackgroundColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlDisabledForegroundColor}">#FF6A6A6A</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlDisabledBorderColor}">#FF4F4F53</Color>

    <!--  Hyperlink  -->
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkColor}">#FF569CD6</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkHoverColor}">#FF2A8DD4</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkVisitedColor}">#FFC8C8C8</Color>

    <!--  Tab & TabItem  -->
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemSelectedBackgroundColor}">#FF1E1E1E</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBackgroundColor}">#FF2D2D30</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBorderColor}">#FF3F3F46</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemForegroundColor}">#FFF1F1F1</Color>

    <!--  Sidebar  -->
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarSelectedBackgroundColor}">#FF333337</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarSelectedAccentColor}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarForegroundColor}">#FFF1F1F1</Color>

    <!--  Button (colors only; brushes are provided by Brushes.xaml)  -->
    <Color x:Key="Button.Static.BackgroundColor">#FF2D2D30</Color>
    <Color x:Key="Button.Static.BorderColor">#FF3A3A3C</Color>
    <Color x:Key="Button.MouseOver.BackgroundColor">#FF3A96DD</Color>
    <Color x:Key="Button.MouseOver.BorderColor">#FF569DE5</Color>
    <Color x:Key="Button.Pressed.BackgroundColor">#FF094771</Color>
    <Color x:Key="Button.Pressed.BorderColor">#FF003366</Color>
    <Color x:Key="Button.Disabled.BackgroundColor">#FF3E3E42</Color>
    <Color x:Key="Button.Disabled.BorderColor">#FF232325</Color>
    <Color x:Key="Button.Disabled.ForegroundColor">#FF77777B</Color>

    <!--  ScrollBar  -->
    <SolidColorBrush x:Key="ScrollBar.Static.Background" Color="#FF3C3C3C" />
    <SolidColorBrush x:Key="ScrollBar.Static.Border" Color="#FF3C3C3C" />
    <SolidColorBrush x:Key="ScrollBar.Static.Glyph" Color="#FF999999" />
    <SolidColorBrush x:Key="ScrollBar.Static.Thumb" Color="#FF686868" />
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Background" Color="#FF404040" />
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Border" Color="#FF404040" />
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Glyph" Color="#FFCCCCCC" />
    <SolidColorBrush x:Key="ScrollBar.MouseOver.Thumb" Color="#FF9E9E9E" />
    <SolidColorBrush x:Key="ScrollBar.Pressed.Background" Color="#FF2D2D30" />
    <SolidColorBrush x:Key="ScrollBar.Pressed.Border" Color="#FF2D2D30" />
    <SolidColorBrush x:Key="ScrollBar.Pressed.Thumb" Color="#FF007ACC" />
    <SolidColorBrush x:Key="ScrollBar.Pressed.Glyph" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ScrollBar.Disabled.Background" Color="#FF3C3C3C" />
    <SolidColorBrush x:Key="ScrollBar.Disabled.Border" Color="#FF3C3C3C" />
    <SolidColorBrush x:Key="ScrollBar.Disabled.Glyph" Color="#FF656565" />
    <SolidColorBrush x:Key="ScrollBar.Disabled.Thumb" Color="#FF3C3C3C" />

    <!--  ComboBox  -->
    <LinearGradientBrush x:Key="ComboBox.Static.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#FF2D2D30" />
        <GradientStop Offset="1.0" Color="#FF232325" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ComboBox.Static.Border" Color="#FFACACAC" />
    <SolidColorBrush x:Key="ComboBox.Static.Glyph" Color="#FF606060" />
    <SolidColorBrush x:Key="ComboBox.Static.Editable.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ComboBox.Static.Editable.Border" Color="#FFABADB3" />
    <SolidColorBrush x:Key="ComboBox.Static.Editable.Button.Background" Color="Transparent" />
    <SolidColorBrush x:Key="ComboBox.Static.Editable.Button.Border" Color="Transparent" />

    <LinearGradientBrush x:Key="ComboBox.MouseOver.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#FF3C3C3C" />
        <GradientStop Offset="1.0" Color="#FF2D2D30" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ComboBox.MouseOver.Border" Color="#FF7EB4EA" />
    <SolidColorBrush x:Key="ComboBox.MouseOver.Glyph" Color="#FF000000" />
    <SolidColorBrush x:Key="ComboBox.MouseOver.Editable.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ComboBox.MouseOver.Editable.Border" Color="#FF7EB4EA" />
    <LinearGradientBrush x:Key="ComboBox.MouseOver.Editable.Button.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#FF2D2D30" />
        <GradientStop Offset="1.0" Color="#FF3C3C3C" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ComboBox.MouseOver.Editable.Button.Border" Color="#FF7EB4EA" />

    <LinearGradientBrush x:Key="ComboBox.Pressed.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#FF094771" />
        <GradientStop Offset="1.0" Color="#FF003366" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ComboBox.Pressed.Border" Color="#FF569DE5" />
    <SolidColorBrush x:Key="ComboBox.Pressed.Glyph" Color="#FF000000" />
    <SolidColorBrush x:Key="ComboBox.Pressed.Editable.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ComboBox.Pressed.Editable.Border" Color="#FF569DE5" />
    <LinearGradientBrush x:Key="ComboBox.Pressed.Editable.Button.Background" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Offset="0.0" Color="#FF094771" />
        <GradientStop Offset="1.0" Color="#FF003366" />
    </LinearGradientBrush>
    <SolidColorBrush x:Key="ComboBox.Pressed.Editable.Button.Border" Color="#FF569DE5" />

    <SolidColorBrush x:Key="ComboBox.Disabled.Background" Color="#FFF0F0F0" />
    <SolidColorBrush x:Key="ComboBox.Disabled.Border" Color="#FFD9D9D9" />
    <SolidColorBrush x:Key="ComboBox.Disabled.Glyph" Color="#FFBFBFBF" />
    <SolidColorBrush x:Key="ComboBox.Disabled.Editable.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ComboBox.Disabled.Editable.Border" Color="#FFBFBFBF" />
    <SolidColorBrush x:Key="ComboBox.Disabled.Editable.Button.Background" Color="Transparent" />
    <SolidColorBrush x:Key="ComboBox.Disabled.Editable.Button.Border" Color="Transparent" />

    <!--  ComboBoxItem  -->
    <SolidColorBrush x:Key="ComboBoxItem.Items.Hover.Background" Color="#FF2A2D2E" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.Hover.Border" Color="#FF3A3D41" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.Selected.Background" Color="#FF094771" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.Selected.Border" Color="#FF007ACC" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.SelectedHover.Background" Color="#FF0E639C" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.SelectedHover.Border" Color="#FF007ACC" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.SelectedNoFocus.Background" Color="#FF232323" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.SelectedNoFocus.Border" Color="#FF3A3D41" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.Focus.Border" Color="#FF007ACC" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.HoverFocus.Background" Color="#FF264F78" />
    <SolidColorBrush x:Key="ComboBoxItem.Items.HoverFocus.Border" Color="#FF007ACC" />

    <!-- ListBox -->
    <SolidColorBrush x:Key="Item.Static.Background" Color="#FFFCFCFC" />
    <SolidColorBrush x:Key="Item.Static.Border" Color="#FFFCFCFC" />
    <SolidColorBrush x:Key="Item.MouseOver.Background" Color="#1F26A0DA" />
    <SolidColorBrush x:Key="Item.MouseOver.Border" Color="#a826A0Da" />
    <SolidColorBrush x:Key="Item.SelectedActive.Background" Color="#3D26A0DA" />
    <SolidColorBrush x:Key="Item.SelectedActive.Border" Color="#FF26A0DA" />
    <SolidColorBrush x:Key="Item.SelectedInactive.Background" Color="#3DDADADA" />
    <SolidColorBrush x:Key="Item.SelectedInactive.Border" Color="#FFDADADA" />

    <SolidColorBrush x:Key="ListBox.Static.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ListBox.Static.Border" Color="#FFABADB3" />
    <SolidColorBrush x:Key="ListBox.MouseOver.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ListBox.MouseOver.Border" Color="#FF7EB4EA" />
    <SolidColorBrush x:Key="ListBox.Disabled.Background" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="ListBox.Disabled.Border" Color="#FFD9D9D9" />


</ResourceDictionary>