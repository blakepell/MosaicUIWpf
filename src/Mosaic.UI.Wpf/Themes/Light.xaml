<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
    xmlns:themes="clr-namespace:Mosaic.UI.Wpf.Themes">

    <!--  MOSAIC CUSTOM COLORS  -->
    <Color x:Key="{x:Static themes:MosaicTheme.AccentColorKey}">#FF0078D7</Color>

    <!--  Control colors  -->
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextForegroundColorKey}">#1C1C1C</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextBackgroundColorKey}">#FFFFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBackgroundColorKey}">#EEEEEE</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBorderColorKey}">#FFCCCCCC</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBorderHoverColorKey}">#FF7EB4EA</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlBorderFocusColorKey}">#FF569DE5</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextSelectionColorKey}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.ControlTextInactiveSelectionColorKey}">#FF0078D7</Color>

    <!--  Hyperlink colors  -->
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkColorKey}">#FF0A86F1</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkHoverColorKey}">#FF0E6FBE</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.HyperLinkVisitedColorKey}">#252074</Color>

    <!--  Sidebar colors  -->
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarSelectedBackgroundColorKey}">#FFD4EDF9</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarSelectedAccentColorKey}">#FF0078D7</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.SidebarForegroundColorKey}">#FF333333</Color>

    <!--  Tab & TabItem colors  -->
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemSelectedBackgroundColorKey}">#FFFFFFFF</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBackgroundColorKey}">#FFF3F3F3</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemBorderColorKey}">#FFCCCCCC</Color>
    <Color x:Key="{x:Static themes:MosaicTheme.TabItemForegroundColorKey}">#FF333333</Color>

    <!--  CheckBox colors  -->
    <SolidColorBrush x:Key="CheckBox.Border.Normal" Color="#FF707070" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Border.Hot" Color="#FF26A0DA" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Border.Pressed" Color="#FF2C628B" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Border.Disabled" Color="#FFADB2B5" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Background.Normal" Color="#FFFFFFFF" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Background.Hot" Color="#FFFFFFFF" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Background.Pressed" Color="#FFFFFFFF" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Background.Disabled" Color="#FFFFFFFF" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Mark.Normal" Color="#FF202020" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Mark.Hot" Color="#FF26A0DA" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Mark.Pressed" Color="#FF2C628B" po:Freeze="True"/>
    <SolidColorBrush x:Key="CheckBox.Mark.Disabled" Color="#FFADB2B5" po:Freeze="True"/>

</ResourceDictionary>