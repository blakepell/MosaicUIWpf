<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Mosaic.UI.Wpf.Controls"
    xmlns:converters="clr-namespace:Mosaic.UI.Wpf.Converters"
    xmlns:themes="clr-namespace:Mosaic.UI.Wpf.Themes">
    <converters:IsNullOrWhiteSpaceToVisibilityConverter x:Key="IsNullOrWhiteSpaceToVisibilityConverter" />

    <Style TargetType="{x:Type controls:Badge}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:Badge}">
                    <Border
                        Width="{TemplateBinding Width}"
                        Height="{TemplateBinding Height}"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="2">
                        <StackPanel HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" Orientation="Horizontal">
                            <TextBlock
                                Padding="5,1,5,1"
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                FontFamily="{DynamicResource {x:Static themes:MosaicTheme.FontFamily}}"
                                FontSize="{DynamicResource {x:Static themes:MosaicTheme.FontSizeNormal}}"
                                FontWeight="SemiBold"
                                Foreground="{TemplateBinding Foreground}"
                                Text="{TemplateBinding Text}"
                                Visibility="{TemplateBinding Text,
                                                             Converter={StaticResource IsNullOrWhiteSpaceToVisibilityConverter}}" />
                            <ContentPresenter
                                HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                Content="{TemplateBinding Content}" />
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
