<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Mosaic.UI.Wpf.Controls"
    xmlns:themes="clr-namespace:Mosaic.UI.Wpf.Themes">

    <Style TargetType="{x:Type controls:InfoCard}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:InfoCard}">
                    <Border
                        Background="Transparent"
                        BorderBrush="{TemplateBinding AnimatedAccentBrush}"
                        BorderThickness="5,0,0,0"
                        CornerRadius="5">
                        <Border
                            Padding="10"
                            Background="{DynamicResource {x:Static themes:MosaicTheme.ControlTextBackgroundKey}}"
                            BorderBrush="{DynamicResource {x:Static themes:MosaicTheme.ControlBorderBrush}}"
                            BorderThickness=".9"
                            CornerRadius="5"
                            Opacity="{TemplateBinding Opacity}">
                            <DockPanel>
                                <DockPanel DockPanel.Dock="Top" LastChildFill="True">
                                    <TextBlock
                                        FontFamily="{TemplateBinding FontFamily}"
                                        FontSize="14"
                                        FontWeight="SemiBold"
                                        Foreground="{DynamicResource {x:Static themes:MosaicTheme.ControlTextForegroundKey}}"
                                        Text="{TemplateBinding Title}" />
                                    <ContentPresenter Content="{TemplateBinding HeaderContent}" />
                                </DockPanel>

                                <Separator
                                    Height=".9"
                                    Margin="0,5,0,0"
                                    Background="{DynamicResource {x:Static themes:MosaicTheme.ControlBorderBrush}}"
                                    DockPanel.Dock="Top"
                                    Visibility="{TemplateBinding SeparatorVisibility}" />

                                <ContentPresenter DockPanel.Dock="Top" />

                                <DockPanel LastChildFill="True">
                                    <ContentPresenter Content="{TemplateBinding FooterContent}" />
                                </DockPanel>
                            </DockPanel>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>