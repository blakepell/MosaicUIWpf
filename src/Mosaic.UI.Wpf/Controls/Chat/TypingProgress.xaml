<UserControl
    x:Class="Mosaic.UI.Wpf.Controls.TypingProgress"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="TypingBubbleStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="8" />
            <Setter Property="Height" Value="8" />
            <Setter Property="Fill" Value="#8A8A8A" />
            <Setter Property="Opacity" Value="0.35" />
            <Setter Property="Margin" Value="4,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>

        <!--  Storyboard that animates the three bubbles with staggered begin times  -->
        <Storyboard x:Key="TypingStoryboard" RepeatBehavior="Forever">
            <!--  Bubble1  -->
            <DoubleAnimation
                AutoReverse="True"
                BeginTime="0:0:0"
                Storyboard.TargetName="Bubble1"
                Storyboard.TargetProperty="Opacity"
                From="0.35"
                To="1.0"
                Duration="0:0:0.6" />
            <!--  Bubble2  -->
            <DoubleAnimation
                AutoReverse="True"
                BeginTime="0:0:0.2"
                Storyboard.TargetName="Bubble2"
                Storyboard.TargetProperty="Opacity"
                From="0.35"
                To="1.0"
                Duration="0:0:0.6" />
            <!--  Bubble3  -->
            <DoubleAnimation
                AutoReverse="True"
                BeginTime="0:0:0.4"
                Storyboard.TargetName="Bubble3"
                Storyboard.TargetProperty="Opacity"
                From="0.35"
                To="1.0"
                Duration="0:0:0.6" />
        </Storyboard>
    </UserControl.Resources>

    <Grid>
        <StackPanel
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Ellipse x:Name="Bubble1" Style="{StaticResource TypingBubbleStyle}" />
            <Ellipse x:Name="Bubble2" Style="{StaticResource TypingBubbleStyle}" />
            <Ellipse x:Name="Bubble3" Style="{StaticResource TypingBubbleStyle}" />
        </StackPanel>
    </Grid>
</UserControl>
