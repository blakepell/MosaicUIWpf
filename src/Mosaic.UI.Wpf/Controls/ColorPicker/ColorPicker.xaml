<UserControl
    x:Class="Mosaic.UI.Wpf.Controls.ColorPicker"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Mosaic.UI.Wpf.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="32"
    d:DesignWidth="200"
    mc:Ignorable="d">

    <Border
        x:Name="PART_MainBorder"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
        BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
        BorderThickness="1"
        CornerRadius="{Binding CornerRadius, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="32" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!--  Color preview  -->
            <Border
                x:Name="PART_ColorPreview"
                Grid.Column="0"
                Margin="4"
                Background="{Binding SelectedBrush, RelativeSource={RelativeSource AncestorType=UserControl}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1"
                CornerRadius="2" />

            <!--  Hex input  -->
            <TextBox
                x:Name="PART_HexTextBox"
                Grid.Column="1"
                Padding="4,2"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderThickness="0"
                FontFamily="Consolas"
                Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                Text="{Binding HexValue, RelativeSource={RelativeSource AncestorType=UserControl}, UpdateSourceTrigger=Explicit}"
                ToolTip="Enter hex color value (e.g., #FF0000)" />

            <!--  Dropdown button  -->
            <Button
                x:Name="PART_DropDownButton"
                Grid.Column="2"
                Width="20"
                Height="20"
                Margin="2"
                Background="Transparent"
                BorderThickness="0"
                ToolTip="Select from preset colors">
                <Path
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Data="M 0 0 L 4 4 L 8 0 Z"
                    Fill="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            </Button>

            <!--  Popup for color selection  -->
            <Popup
                x:Name="PART_ColorPopup"
                AllowsTransparency="True"
                Focusable="False"
                Placement="Bottom"
                PlacementTarget="{Binding ElementName=PART_MainBorder}"
                PopupAnimation="Slide"
                StaysOpen="False">
                <Border
                    Width="{Binding ElementName=PART_MainBorder, Path=ActualWidth}"
                    MaxHeight="300"
                    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1"
                    CornerRadius="2">
                    <ScrollViewer
                        Margin="2"
                        HorizontalScrollBarVisibility="Auto"
                        SnapsToDevicePixels="True"
                        VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="PART_ColorItemsControl">
                            <ItemsControl.ItemContainerStyle>
                                <Style TargetType="ContentPresenter">
                                    <Setter Property="Margin" Value="0,1" />
                                </Style>
                            </ItemsControl.ItemContainerStyle>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Padding="4,2"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Click="ColorItem_Click"
                                        Tag="{Binding}">
                                        <Button.Template>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    x:Name="border"
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderThickness="0">
                                                    <ContentPresenter />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="border" Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Button.Template>
                                        <Grid d:DataContext="{d:DesignInstance controls:ColorPickerItem}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="24" />
                                                <ColumnDefinition Width="8" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="8" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <!--  Color preview  -->
                                            <Border
                                                Grid.Column="0"
                                                Width="20"
                                                Height="16"
                                                Background="{Binding Brush}"
                                                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                                                BorderThickness="1"
                                                CornerRadius="2" />

                                            <!--  Color name  -->
                                            <TextBlock
                                                Grid.Column="2"
                                                VerticalAlignment="Center"
                                                Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                                Text="{Binding Name}" />

                                            <!--  Hex value  -->
                                            <TextBlock
                                                Grid.Column="4"
                                                VerticalAlignment="Center"
                                                FontFamily="Consolas"
                                                FontSize="10"
                                                Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                                                Text="{Binding HexValue}" />
                                        </Grid>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Popup>
        </Grid>
    </Border>
</UserControl>
