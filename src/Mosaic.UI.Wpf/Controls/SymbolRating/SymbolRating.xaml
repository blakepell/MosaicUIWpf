<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Mosaic.UI.Wpf.Controls">

    <controls:SymbolStateConverter x:Key="SymbolStateConverter" />

    <Style TargetType="{x:Type controls:SymbolRating}">
        <Setter Property="Focusable" Value="True" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:SymbolRating}">
                    <StackPanel Background="Transparent" Orientation="Horizontal">
                        <!--  Deselect button  -->
                        <Button
                            x:Name="PART_DeselectButton"
                            Margin="0,0,5,0"
                            Padding="2"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Focusable="False"
                            ToolTip="Clear rating">
                            <Button.Visibility>
                                <Binding Path="ShowDeselectOption" RelativeSource="{RelativeSource TemplatedParent}">
                                    <Binding.Converter>
                                        <BooleanToVisibilityConverter />
                                    </Binding.Converter>
                                </Binding>
                            </Button.Visibility>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="{Binding SymbolFont, RelativeSource={RelativeSource TemplatedParent}}"
                                FontSize="{Binding SymbolSize, RelativeSource={RelativeSource TemplatedParent}}"
                                Foreground="{Binding UnselectedBrush, RelativeSource={RelativeSource TemplatedParent}}"
                                Text="✖" />
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border
                                                    Padding="{TemplateBinding Padding}"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    CornerRadius="2">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#20000000" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!--  Rating symbols  -->
                        <ItemsControl x:Name="PART_SymbolContainer" ItemsSource="{Binding SymbolIndices, RelativeSource={RelativeSource TemplatedParent}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button
                                        Name="SymbolButton"
                                        Padding="1"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding SymbolClickCommand, RelativeSource={RelativeSource AncestorType=controls:SymbolRating}}"
                                        CommandParameter="{Binding}"
                                        Cursor="Hand"
                                        Focusable="False"
                                        Tag="{Binding}">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontFamily="{Binding SymbolFont, RelativeSource={RelativeSource AncestorType=controls:SymbolRating}}"
                                            FontSize="{Binding SymbolSize, RelativeSource={RelativeSource AncestorType=controls:SymbolRating}}"
                                            Text="{Binding Symbol, RelativeSource={RelativeSource AncestorType=controls:SymbolRating}}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Foreground" Value="{Binding UnselectedBrush, RelativeSource={RelativeSource AncestorType=controls:SymbolRating}}" />
                                                    <Style.Triggers>
                                                        <!--  Selected state  -->
                                                        <DataTrigger Value="True">
                                                            <DataTrigger.Binding>
                                                                <MultiBinding Converter="{StaticResource SymbolStateConverter}">
                                                                    <Binding />
                                                                    <Binding Path="SelectedCount" RelativeSource="{RelativeSource AncestorType=controls:SymbolRating}" />
                                                                    <Binding Path="HoveredIndex" RelativeSource="{RelativeSource AncestorType=controls:SymbolRating}" />
                                                                    <Binding Path="IsHoverPreviewEnabled" RelativeSource="{RelativeSource AncestorType=controls:SymbolRating}" />
                                                                </MultiBinding>
                                                            </DataTrigger.Binding>
                                                            <Setter Property="Foreground" Value="{Binding SelectedBrush, RelativeSource={RelativeSource AncestorType=controls:SymbolRating}}" />
                                                        </DataTrigger>
                                                        <!--  Hover state override  -->
                                                        <DataTrigger Value="Hover">
                                                            <DataTrigger.Binding>
                                                                <MultiBinding Converter="{StaticResource SymbolStateConverter}" ConverterParameter="State">
                                                                    <Binding />
                                                                    <Binding Path="SelectedCount" RelativeSource="{RelativeSource AncestorType=controls:SymbolRating}" />
                                                                    <Binding Path="HoveredIndex" RelativeSource="{RelativeSource AncestorType=controls:SymbolRating}" />
                                                                    <Binding Path="IsHoverPreviewEnabled" RelativeSource="{RelativeSource AncestorType=controls:SymbolRating}" />
                                                                </MultiBinding>
                                                            </DataTrigger.Binding>
                                                            <Setter Property="Foreground" Value="{Binding HoverBrush, RelativeSource={RelativeSource AncestorType=controls:SymbolRating}}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border
                                                                Padding="{TemplateBinding Padding}"
                                                                Background="{TemplateBinding Background}"
                                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>