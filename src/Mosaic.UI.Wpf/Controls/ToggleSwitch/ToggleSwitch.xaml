<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Mosaic.UI.Wpf.Controls">

    <Style TargetType="{x:Type controls:ToggleSwitch}">
        <!--  Sane defaults; you can override per-instance  -->
        <Setter Property="Width" Value="60" />
        <Setter Property="Height" Value="28" />
        <Setter Property="BorderBrush" Value="White"></Setter>
        <Setter Property="Background" Value="#0078D7" />
        <Setter Property="Foreground" Value="#FFFFFF" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ToggleSwitch}">
                    <Canvas
                        Background="{TemplateBinding Background}"
                        SnapsToDevicePixels="False">

                        <Grid Height="28" Width="60">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*" />
                                <ColumnDefinition Width="50*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="{TemplateBinding OnText}" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="6,0,0,0"></TextBlock>
                            <TextBlock Text="{TemplateBinding OffText}" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,6,0"></TextBlock>

                        </Grid>

                        <Border
                            x:Name="PART_Thumb"
                            Width="24"
                            Height="20"
                            Margin="4"
                            Background="{TemplateBinding Foreground}" />

                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
