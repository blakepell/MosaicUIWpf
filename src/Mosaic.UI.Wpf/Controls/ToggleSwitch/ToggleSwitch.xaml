<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Mosaic.UI.Wpf.Controls">

    <Style TargetType="{x:Type controls:ToggleSwitch}">
        <Setter Property="BorderBrush" Value="White" />
        <Setter Property="Background" Value="#0078D7" />
        <Setter Property="Foreground" Value="#FFFFFF" />
        <Setter Property="Focusable" Value="True" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:ToggleSwitch}">
                    <Canvas Background="{TemplateBinding Background}" SnapsToDevicePixels="False">

                        <Grid Width="{TemplateBinding Width}" Height="{TemplateBinding Height}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*" />
                                <ColumnDefinition Width="50*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Margin="6,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Text="{TemplateBinding OnText}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="0,0,6,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Text="{TemplateBinding OffText}" />

                        </Grid>

                        <Border
                            x:Name="PART_Thumb"
                            Width="24"
                            Height="20"
                            Margin="4"
                            Background="{TemplateBinding Foreground}" />

                    </Canvas>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
