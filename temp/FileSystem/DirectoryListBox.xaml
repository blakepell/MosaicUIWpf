<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ext="clr-namespace:Mosaic.UI.Wpf.Extensions"
    xmlns:mosaic="clr-namespace:Mosaic.UI.Wpf.Controls"
    xmlns:themes="clr-namespace:Mosaic.UI.Wpf.Themes">

    <Style TargetType="{x:Type mosaic:DirectoryListBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type mosaic:DirectoryListBox}">
                    <Border
                        Background="{DynamicResource {x:Static themes:MosaicTheme.ControlTextBackgroundKey}}"
                        BorderBrush="{DynamicResource {x:Static themes:MosaicTheme.ControlBorderBrush}}"
                        BorderThickness="1">
                        <ScrollViewer>
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type mosaic:DirectoryListItem}">
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <Image
                            Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type mosaic:DirectoryListBox}}, Path=IconWidth}"
                            Height="{Binding RelativeSource={RelativeSource AncestorType={x:Type mosaic:DirectoryListBox}}, Path=IconHeight}"
                            Margin="0,0,5,0">
                            <Image.Style>
                                <Style TargetType="Image">
                                    <Setter Property="Source" Value="pack://application:,,,/Mosaic.UI.Wpf;component/assets/document-32.png" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Type}" Value="Directory">
                                            <Setter Property="Source" Value="pack://application:,,,/Mosaic.UI.Wpf;component/assets/folder-48.png" />
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Type}" Value="Up">
                                            <Setter Property="Source" Value="pack://application:,,,/Mosaic.UI.Wpf;component/assets/folder-48.png" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Image.Style>
                        </Image>
                        <TextBlock
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource {x:Static themes:MosaicTheme.ControlTextForegroundKey}}"
                            Text="{Binding Name}" />
                        <TextBlock ext:UIExtensions.IsVisible="False" Text="hi" />
                    </StackPanel>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>